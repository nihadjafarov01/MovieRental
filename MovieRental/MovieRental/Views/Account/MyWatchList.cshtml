                                    <div class="iq-card card-hover">
                                        <div class="block-images position-relative w-100">
                                            <div class="img-box w-100">
                                                <a asp-action="Watch" asp-controller="Movie" asp-route-id="@item.Movie.Id" class="position-absolute top-0 bottom-0 start-0 end-0"></a>
                                                <img src="./assets/images/movies/related/01.webp" alt="movie-card" class="img-fluid object-cover w-100 d-block border-0 ww-popmovie-image-@item.Movie.Id">
                                            </div>
                                            <div class="card-description with-transition">
                                                <div class="cart-content">
                                                    <div class="content-left">
                                                        <h5 class="iq-title text-capitalize">
                                                            <a class="ww-popmovie-title-@item.Movie.Id" href="./movie-detail.html">giikre</a>
                                                        </h5>
                                                        <div class="movie-time d-flex align-items-center my-2">
                                                            <span class="movie-time-text font-normal">2hr : 12mins</span>
                                                        </div>
                                                    </div>
                                                    <div class="watchlist">
                                                        <a class="watch-list-not" href="playlist.html">
